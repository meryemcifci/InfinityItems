<style>
    .homeIndex {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #212529;
        overflow-x: visible;
        justify-content: center;
        min-width: 100%;
        height: 100vh;
        font-family: 'Urbanist', sans-serif;
    }
    h3 {
        margin-top: 0;
        margin-bottom: 2rem;
        text-align: center;
        color: #00ffff;
    }

    a{
        text-decoration: none;
    }

    input {
         display: none;
    }

    .container2 {
        min-width: 100%;    
        display: flex;
        transform-style: preserve-3d;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .cards {
        position: relative;
        height: 675px;
        width: 410px;
        margin-bottom: 20px;
        perspective: 1000px;
        transform-style: preserve-3d;
    }

    .cards label {
        position: absolute;
        width: 430px;
        left: 0;
        right: 0;
        margin: auto;
        cursor: pointer;
        transition: transform 0.55s ease;
    }

    .cards .card {
        position: relative;
        height: 100%;
        background-color: #212529;
        border-radius: 10px;
        padding: 30px 35px;
    }

    .card .image{
        display: flex;
        justify-content: space-between;
    }

    .card .image img{
        border-radius: 5px;
        box-shadow: 15px 15px 40px rgba(0, 0, 0, 50%);
        margin-top: 23px;
        width: 86%;
        height: 195px;
        object-fit: cover;
    }
    .card .image video{
        border-radius: 5px;
        box-shadow: 15px 15px 40px rgba(0, 0, 0, 50%);
        margin-top: 23px;
        width: 86%;
        height: 195px;
        object-fit: cover;
    }

    .card .image .dots{
        text-align: center;
    }

    .dots div{
        width: 10px;
        height: 10px;
        border-radius: 50%;
        margin-bottom: 10px;
    }

    .dots div:nth-child(1){
        background-color: #00ffff;
    }

    .dots div:nth-child(2){
        background-color: #5B85F9;
    }

    .dots div:nth-child(3){
        background-color: #000;
    }

    .card .infos{
        display: block;
        text-align: end;
        padding-top: 25px;
    }

    .infos span{
        display: block;
    }

    .infos .name {
        font-size: 30px;
        color: #FFFFF0; /*isim yazı rengi*/
        text-transform: uppercase;
        letter-spacing: 8px;
        margin-bottom: 20px;
        padding-left: 25%;
        transition: all .6s ease;
    }

    .infos .lorem{
        font-size: 15.5px;
        color: #ECEAED;
        letter-spacing: 3px;
    }

    .card .btn-contact {
        width: 100%;
        height: 45px;
        margin: 35px auto;
        border-radius: 5px;
        background-image: linear-gradient( to top right, #212529, #00ffff );
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 25px;
        letter-spacing: 10px;
        font-weight: 700;
        transition: all .7s ease;
    }

    .card .socials{
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 10px;
    }

    .socials i{
        font-size: 25px;
        transition: all .7s ease;
        color: var(--current-color2);
    }

    #s1:checked ~ .cards #slide4,
    #s2:checked ~ .cards #slide5,
    #s3:checked ~ .cards #slide1,
    #s4:checked ~ .cards #slide2,
    #s5:checked ~ .cards #slide3 {
        box-shadow: 0 5px 20px 0 #00ffff;
        transform: translate3d(-70%, 0, -220px);
        --current-color1: #ECEAED;
        --current-color2: #404457;
    }

    #s1:checked ~ .cards #slide5,
    #s2:checked ~ .cards #slide1,
    #s3:checked ~ .cards #slide2,
    #s4:checked ~ .cards #slide3,
    #s5:checked ~ .cards #slide4 {
        box-shadow: 0 5px 20px 0 #00ffff;
        transform: translate3d(-35%, 0, -120px);
        --current-color1: #ECEAED;
        --current-color2: #404457;
    }

    #s1:checked ~ .cards #slide1,
    #s2:checked ~ .cards #slide2,
    #s3:checked ~ .cards #slide3,
    #s4:checked ~ .cards #slide4,
    #s5:checked ~ .cards #slide5 {
        box-shadow: 0 5px 30px 0 #00ffff;
        transform: translate3d(0, 0, 0);
        --current-color1: #fad00c;
        --current-color2: #ECEAED;
    }

    #s1:checked ~ .cards #slide2,
    #s2:checked ~ .cards #slide3,
    #s3:checked ~ .cards #slide4,
    #s4:checked ~ .cards #slide5,
    #s5:checked ~ .cards #slide1 {
        box-shadow: 0 5px 20px 0 #00ffff;
        transform: translate3d(35%, 0, -120px);
        --current-color1: #ECEAED;
        --current-color2: #404457;
    }

    #s1:checked ~ .cards #slide3,
    #s2:checked ~ .cards #slide4,
    #s3:checked ~ .cards #slide5,
    #s4:checked ~ .cards #slide1,
    #s5:checked ~ .cards #slide2 {
